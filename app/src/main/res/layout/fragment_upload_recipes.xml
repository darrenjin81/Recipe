<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

        <android.support.v7.widget.AppCompatImageButton android:id="@+id/btnUploadImage"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="#e0e0e0"
            app:srcCompat="@drawable/upload" />

        <EditText android:id="@+id/upload_recipe_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnUploadImage"
            android:layout_margin="8dp"
            android:background="@drawable/underline"
            android:hint="@string/upload_recipe_title" />

    <RelativeLayout
        android:id="@+id/tag_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upload_recipe_name"
        >

        <TextView
            android:id="@+id/tvSelectTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="Select tag:"
            android:textSize="12sp"
            />

        <ImageButton
            android:id="@+id/ib_addTag"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/tvSelectTag"
            android:layout_toRightOf="@+id/tvSelectTag"
            android:background="@drawable/add" />

        <EditText
            android:id="@+id/et_addTag"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvSelectTag"

            android:layout_alignBottom="@+id/tvSelectTag"
            android:layout_toEndOf="@+id/ib_addTag"
            android:layout_toRightOf="@+id/ib_addTag"
            android:text="#"
            android:visibility="gone" />

        <GridLayout
            android:id="@+id/existingTags"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/tvSelectTag"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:columnCount="4"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_dessert"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:text="#desset" />

            <Button
                android:id="@+id/btn_entree"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:text="#entree" />

            <Button
                android:id="@+id/btn_breakfast"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:text="#breakfast" />

            <Button
                android:id="@+id/btn_sushi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:text="#sushi" />

        </GridLayout>


    </RelativeLayout>

        <ListView
            android:id="@+id/ingredients_list"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/upload_recipe_name"
            />

        <EditText android:id="@+id/upload_recipe_ingredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ingredients_list"
            android:layout_margin="8dp"
            android:hint="@string/upload_recipe_ingredients" />

    <android.support.v7.widget.AppCompatImageButton android:id="@+id/btnAddIngredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/add"
        android:layout_below="@id/ingredients_list"
        android:clickable="true"
        android:layout_toRightOf="@id/ingredients_list"
        android:background="#FFFFFF" />


    <ListView
        android:id="@+id/instructions_list"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/upload_recipe_ingredients"
        />


        <EditText android:id="@+id/upload_recipe_instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/instructions_list"
            android:layout_margin="8dp"
            android:inputType="textCapSentences|textMultiLine"
            android:hint="@string/upload_recipe_instructions" />



        <android.support.v7.widget.AppCompatImageButton android:id="@+id/btnAddInstructionsStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_recipe_btn_add_ingredient"
            app:srcCompat="@drawable/add"
            android:layout_below="@id/upload_recipe_instructions"
            android:layout_toRightOf="@id/instructions_list"
            android:clickable="true"
            android:background="#FFFFFF"/>

        <Button android:id="@+id/button_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_btn_save"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/et_pick_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnUploadImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="@string/cooking_time"
        android:inputType="time" />

    </RelativeLayout>
