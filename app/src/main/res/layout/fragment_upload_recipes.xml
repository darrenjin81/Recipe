<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/upload_recipe_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:textSize="18sp"
            android:text="@string/upload_recipe_text" />

        <EditText android:id="@+id/upload_recipe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/upload_recipe_text"
            android:layout_margin="8dp"
            android:hint="@string/upload_recipe_title" />

        <EditText android:id="@+id/upload_recipe_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/upload_recipe_name"
            android:layout_margin="8dp"
            android:inputType="textCapSentences|textMultiLine"
            android:hint="@string/upload_recipe_instructions" />

        <ImageView
            android:id="@+id/upload_recipe_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/upload_recipe_instructions"
            android:layout_centerHorizontal="true"
            app:srcCompat="@android:drawable/ic_menu_upload" />

        <Button android:id="@+id/btnActivateCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_recipe_take_photo"
            android:layout_alignBottom="@+id/upload_recipe_image"
            android:layout_alignLeft="@+id/upload_recipe_instructions"
            android:layout_alignStart="@+id/upload_recipe_instructions"
            android:layout_marginBottom="24dp" />

        <Button android:id="@+id/btnUploadImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_recipe_image"
            android:layout_alignBottom="@+id/upload_recipe_image"
            android:layout_alignRight="@+id/upload_recipe_instructions"
            android:layout_alignEnd="@+id/upload_recipe_instructions"
            android:layout_marginBottom="24dp" />


        <Button android:id="@+id/button_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/upload_recipe_image"
            android:layout_marginTop="8dp"
            android:layout_alignLeft="@id/upload_recipe_instructions"
            android:text="@string/upload_btn_save" />



    </RelativeLayout>
</ScrollView>