<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivRecipediaLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:src="@drawable/recipedia_logo" />

    <TextView
        android:id="@+id/tvLoginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivRecipediaLogo"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="@string/fragment_login_text"
        android:textColor="@color/colorTextPrimary"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etLoginEmailField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLoginText"
        android:layout_margin="16dp"
        android:hint="@string/fragment_login_email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/etLoginPasswordField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etLoginEmailField"
        android:layout_margin="16dp"
        android:layout_marginTop="8dp"
        android:hint="@string/fragment_login_password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etLoginPasswordField"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:text="@string/fragment_login_btnLogin"
        android:background="@drawable/button_secondary"/>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:text="@string/fragment_login_btnRegister"
        android:background="@drawable/button_secondary"/>

</RelativeLayout>